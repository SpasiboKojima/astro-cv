{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"files": {
		"includes": ["**", "!**/*.astro", "!dist/**"]
	},
	"assist": { "actions": { "source": { "organizeImports": "off", "useSortedProperties": "on" } } },
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 140,
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": "off",
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"noUnusedImports": "warn"
			},
			"style": {
				"useEnumInitializers": "off",
				"useSelfClosingElements": "error",
				"noUnusedTemplateLiteral": "error",
				"useNumberNamespace": "error",
				"noInferrableTypes": "error"
			}
		}
	}
}
