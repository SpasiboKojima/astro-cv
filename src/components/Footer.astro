---
import AstroIcon from '~/assets/icons/stack/astro-light.svg';
import AstroDarkIcon from '~/assets/icons/stack/astro-dark.svg';
import SolidIcon from '~/assets/icons/stack/solid-light.svg';
import SolidDarkIcon from '~/assets/icons/stack/solid-dark.svg';
---

<footer class='mt-auto w-full text-right p-4 text-sm'>
	Built with
	<AstroIcon class='dark:inline h-7 w-auto hidden' />
	<AstroDarkIcon class='inline h-7 w-auto dark:hidden' /> +
	<SolidIcon class='dark:inline h-5 w-auto hidden' />
	<SolidDarkIcon class='inline h-5 w-auto dark:hidden' />
</footer>
