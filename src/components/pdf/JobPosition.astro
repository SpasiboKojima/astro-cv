---
interface Props {
	title: string;
	employerName: string;
	period: string;
	description: string;
}

const { employerName, title, period, description } = Astro.props;
---

<div class="w-full text-sm tracking-tight">
  <h3 class="text-base font-medium">{employerName}</h3>
  <div class="mt-1.5 flex items-center justify-between gap-4">
    <div>{title}</div>
    <div class="italic">{period}</div>
  </div>
  <p class="mt-2 whitespace-pre-line pl-4">{description}</p>
</div>
