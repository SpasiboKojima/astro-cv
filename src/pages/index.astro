---
import Footer from '~/components/Footer.astro';
import Projects from '~/components/Projects.astro';
import SectionNavigation from '~/components/SectionNavigation';
import SidePanel from '~/components/SidePanel.astro';
import { ThemeToggle } from '~/components/Theme/Toggle';
import ThemeIcon from '~/components/ThemeIcon.astro';
import WorkExperience from '~/components/work/WorkExperience.astro';
import Layout from '../layouts/Layout.astro';

import '~/font.css';
---

<Layout>
	<main class='mx-auto bg-transparent p-4 font-[Geist] text-base-content'>
		<ThemeIcon />
		<ThemeToggle client:load/>
		
		<div class='m-auto max-w-xl lg:max-w-5xl'>
			<div class='grid grid-cols-1 gap-4 lg:grid-cols-3'>
				<SidePanel />

				<SectionNavigation client:load >
					<WorkExperience slot='work' transition:animate="fade" />
					<Projects slot='projects'  transition:animate="fade" />
				</SectionNavigation>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
